{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "declaration": true,
    "lib": ["dom", "es6", "esnext.asynciterable", "es2017.object"],
    "jsx": "react",
    "skipLibCheck": true
  },
  "exclude": ["lib", "__tests__", "examples", "__mocks__", "coverage", "scripts"],
  "compileOnSave": true
}
